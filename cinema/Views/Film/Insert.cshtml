@model cinema.ViewModel.FilmViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <title>Insert</title>
</head>
<body>
    <div class="container">

        <form asp-action="Insertcomfirm" asp-controller="Film">
            <div class="form-group">
                <label>Product Name</label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label>Product Year</label>
                <input class="form-control" asp-for="Year" />              
            </div>
            <div class="form-group">
                <label>Countries</label>
                <select class="form-control" asp-for="CountryId">
                    @foreach (var item in ViewData["countries"] as List<Country>)
                    {
                        <option value="@item.Id" >@item.Name</option>
                    }
                </select>
            </div>
            <button class="btn btn-primary">send</button>

        </form>
    </div>
</body>
</html>
